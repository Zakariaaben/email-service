# Contexte d'exécution
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Sécurité
MAIL_SERVICE_API_KEY=your_api_key_here

# Identité d'expéditeur par défaut
MAIL_FROM_NAME=Mail Service
MAIL_FROM_ADDRESS=mail-service@example.com

# Option 1 : configuration SMTP via URL (prioritaire si définie)
# Exemple : SMTP_URL=smtps://user:password@smtp.example.com:465
SMTP_URL=

# Option 2 : configuration SMTP détaillée (utilisée quand SMTP_URL est vide)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_REQUIRE_TLS=true

# Identifiants SMTP (utilisés si définis)
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# Compatibilité Gmail (utilisé si SMTP_USER/SMTP_PASSWORD sont absents)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password-here

# Contrôle CORS (séparer plusieurs origins par des virgules)
CORS_ORIGINS=http://localhost:3001,https://your-frontend.example
